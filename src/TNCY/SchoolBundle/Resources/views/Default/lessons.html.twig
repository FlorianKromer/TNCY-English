{% extends 'TNCYSchoolBundle::layout.html.twig' %}

{% block title %}{{ "Leçons"| trans}} {{ parent() }}  {% endblock %}
    {% block container %}

        <main role="main" class="main">
            <!-- Content goes here -->
            <div class="container ">
                    <h1>Apprenez une nouvelle leçon</h1>

        <div class="bs-component">
          <ul class="nav nav-tabs" style="margin-bottom: 15px;">
            <li class="active"><a aria-expanded="true" href="#lessons" data-toggle="tab">Dernières leçons<div class="ripple-container"></div></a></li>
            <li class=""><a aria-expanded="false" href="#search" data-toggle="tab">Rechercher<div class="ripple-container"></div></a></li>
          </ul>
          <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="lessons">
                    <div class="row">
                        <div class="col-md-12">
                            
                            <h2>{{ "Les dernieres leçons"|trans}}</h2>
                            {# total items count #}
                            <div class="count">
                                {{ "Nombre de leçons"|trans}} : {{ pagination.getTotalItemCount }}
                            </div>
                        </div>
                    </div>
                    <div class="grid">
                        
                        <div class="row ">
                            {% for lesson in pagination %}
                                <div class="col-md-4 ">
                                    <figure class="effect-oscar">
                                        <img src="{{ asset('bundles/tncyschool/img/lessons/'~ lesson.topic|lower  ~'.jpg') }}" alt="image {{lesson.topic|lower}}">
                                        <figcaption>
                                            <h2>{{ lesson.name }}</h2>
                                            <p>{{ "Mis à jour le"|trans}} {{ lesson.createdAt | date('Y-m-d') }}</p>
                                            <a href="{{path("tncy_school_lessondetail",{"id" : lesson.id})}}">Voir</a>
                                        </figcaption>           
                                    </figure>
                                </div>
                                {% if loop.index is divisible by(3) %}
                                </div>
                                <div class="row">
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    
                    {# display navigation #}
                    <nav>
                        {{ knp_pagination_render(pagination) }}
                    </nav>
            </div>
            <div class="tab-pane fade" id="search">
                <div class="row">
                    <div class="col-md-12">

                        <h2>{{ "Formulaire de recherche de leçon"| trans}}</h2>
                        {{ form_start(form, {'attr': {'class': 'form-horizontal','role': 'form'} }) }}


                        <div class="form-group">
                            {{ form_errors(form) }}
                        </div>
                        <div class="form-group ">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                            <div class="col-lg-10">
                                {{ form_widget(form.name)}}
                            </div>
                        </div>
                        <div class="form-group ">
                            {{ form_label(form.topic, null, {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                            <div class="col-lg-10">
                                {{ form_widget(form.topic)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                {{ form_widget(form.submit)}}
                            </div>
                        </div>
                        {{ form_widget(form) }}
                        {{ form_end(form) }}   
                    </div>
                </div>
            </div>
          </div>
        <div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div>
        </div>
                

            </div>
        </div>
    </main>

{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script src="https://cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.js"></script>
    <script type="text/javascript">
        $(".select").dropdown();
    </script>


{% endblock %}
